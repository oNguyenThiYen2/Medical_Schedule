<% provide :title, t("forgot_password") %>
<% provide :button_text, t("send_reset_link") %>

<div class="container">
  <h1 class="space"><%= t "forgot_password" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <%= f.label t("mail") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control space" %>

        <%= f.submit yield(:button_text), class: "btn custom_btn space create_account" %>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
