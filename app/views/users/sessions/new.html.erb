<% provide :title, t("signin") %>

<h1><%= t "signin" %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <%= f.label t("mail") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control space" %>

        <%= f.label t("pass") %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control space" %>

        <% if devise_mapping.rememberable? %>
          <%= f.label t("remember"), class: "checkbox" do %>
            <%= f.check_box :remember_me, class: "remember_box" %>
            <span><%= t "remember_me" %></span>
          <% end %>
        <% end %>

        <div class="actions">
          <%= f.submit t("signin"), class: "btn custom_btn" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
