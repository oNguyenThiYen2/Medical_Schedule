$('.chat_list > li').remove();
<% if @users.present? %>
  <% @users.each do |user| %>
    $('.chat_list').append("<li>" + '<%= image_tag user.image, class:"avatar_icon" %>' +
    '<%= link_to user.user_name, conversations_path(user_id: user.id), remote: true, method: :post, class: "chat_box" %>' +
    "</li>");
  <% end %>
<% else %>
  u = '<li>' +  '<%= t('none') %>' + '</li>';
  $(u).appendTo('.chat_list');
<% end %>
