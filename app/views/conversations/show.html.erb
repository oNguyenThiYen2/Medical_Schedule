<h1>Chat room</h1>
<li>
  <div class="panel panel-default" data-conversation-id="<%= @conversation.id %>">
    <div class="panel-heading">
      <%= link_to @conversation.opposed_user(user)&.user_name, '', class: 'toggle-window' %>
      <%= link_to "x", "#", class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <ul class="messages-list">
        <%= render @messages %>
      </ul>
    </div>

    <form>
      <label>Say something:</label><br>
      <input type="text" data-behavior="room_speaker">
    </form>
  </div>
</li>
