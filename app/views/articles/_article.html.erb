<div class="col-md-6">
  <div class="single_blog">
    <% if article.thumbnail.attached? %>
      <div class="blog_img"><%= image_tag article.thumbnail, class: "article_thumbnail" %></div>
    <% end %>
    <div class="blog_content">
      <div class="blog_meta">
        <%= link_to "#", class: "date box-width" do%>
          <h4><%= Date::MONTHNAMES[article.created_at.month] %></h4>
          <span><%= article.created_at.day %></span>
        <% end %>
        <%= link_to "#", class: "comment_box box-width" do %>
          <i class="zmdi zmdi-comments"></i><%= Settings.number_comment %>
        <% end %>
      </div>
      <h4><%= article.title %></h4>
      <p class="hiddent-content"><%= raw(article.content) %></p>
      <%= link_to article_path(article.id), class: "read_btn" do %>
        <%= t "know_more" %>
        <i class="zmdi zmdi-pmmore lus"></i>
      <% end %>
      <% if current_user&.staff? || current_user&.admin? %>
        <%= link_to article_path(article.id), method: :delete, data: {confirm: t("are_you_sure_delete")}, class: "btn btn-danger btn_width right_float" do %>
          <%= t "delete_article" %>
        <% end %>
        <%= link_to edit_article_path(article.id), class: "btn btn-primary btn_width right_float" do %>
          <%= t "edit_article" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
