<%= form_for load_yield_object object do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label t("user_name"), class:"require_lb" %>
  <%= f.text_field :user_name, autofocus: true, class: "form-control space" %>

  <%= f.label t("full_name"), class:"require_lb" %>
  <%= f.text_field :full_name, autofocus: true, class: "form-control space" %>

  <%= f.label t("mail"), class:"require_lb" %>
  <%= f.email_field :email, autofocus: true, class: "form-control space" %>

  <%= f.label t("pass") %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control space" %>

  <%= f.label t("pass_confirm") %>
  <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control space" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary space create_account btn-size" %>
<% end %>
